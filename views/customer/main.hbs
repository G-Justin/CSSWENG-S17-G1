<script>
    $(function() { //SLIDER min == ui.value[0] / max == ui.value[1]
        $("#slider-3").slider({
            range:true,
            min: 0,
            max: {{maxPrice}},
            values: [0, {{maxPrice}}],
            slide: function(event, ui) {
                $("#price").val("₱" + ui.values[0] + " - ₱" + ui.values[1]);
            }
        });
        $("#price").val("₱" + $("#slider-3").slider("values", 0) + " - ₱" + $("#slider-3").slider("values", 1));
        $("#slider-3 .ui-slider-range" ).css('background', 'rgb(52, 58, 64)');
    });
</script>


