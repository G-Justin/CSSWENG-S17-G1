<script>
	$('#popup').on('click', function(){
      $('#link_to_modal_popup').trigger('click');
});
</script>

<style>
	label{
		font-weight: bold;
	}
</style>

<div class="mt-5 row">
	<div class="container-fluid">
		<h5 style = "text-align: center;">ORDER NUMBER</h5>
		<div class="row">
			<div class="col-md-6" style="background-color: rgba(228, 227, 227, 0.507)"id="left">
				<br><h5 class="card-title pb-2" style="text-align: center;">Customer Details</h5>
				<div class="card h-auto" style = "margin:auto; width:275px">
					<div class="card-body">
						<label for = "orderdate">Orderdate: </label><p contenteditable="TRUE" spellcheck="FALSE" id="orderdate" >{{orderDate}}</p>
						<label for = "firstname">Firstname: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="firstname" style = "display: inline">{{firstname}}</p><br>
						<label for = "lastname">Lastname: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="lastname" style = "display: inline">{{lastname}}</p><br>
						<label for = "contact">Contact #: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="contact" style = "display: inline">{{contactNo}}</p><br>
						<label for = "email">Email: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="email" style = "display: inline">{{email}}</p><br>
						<label for = "address">Address: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="address" style = "display: inline">{{address}}</p><br>
						<label for = "payMode">Payment Mode: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="payMode" style = "display: inline">{{paymentMode}}</p><br>
						<label for = "payDate">Payment Date: </label> <p contenteditable="TRUE" spellcheck="FALSE"id="payDate" style = "display: inline">{{paymentDate}}</p><br>
						<label for = "deliMode">Delivery Mode: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="deliMode" style = "display: inline">{{deliveryMode}}</p><br>
						<label for = "deliDate">Delivery Date: </label> <p contenteditable="TRUE" spellcheck="FALSE" id="deliDate">{{deliveryDate}}</p>
						<p class="card-text"><b>Total Item:</b> {{totalItems}}</p>
					</div>
				</div>
				
				<br><h5 class="card-title pb-2" style="text-align: center;">Status</h5>
				<div class="card h-auto" style = "margin:auto; width:275px">
					<div class="card-body">
						<p class="card-text"><b>Delivery Status:</b> <select class="browser-default custom-select"><option value="PROCESSING">PROCESSING</option><option value="DELIVERING">DELIVERING</option><option value="DELIVERED">DELIVERED</option><option value="{{deliveryStatus}}" disabled selected hidden>{{deliveryStatus}}</option></select></p>
						<p class="card-text"><b>Payment Status:</b> <select class="browser-default custom-select"><option value="TO PAY">TO PAY</option><option value="PAID">PAID</option><option value="{{paymentStatus}}" disabled selected hidden>{{paymentStatus}}</option></select></p>
					</div>
				</div>
				<div class="card-body" style="text-align: center;">
					<a href="#" class="btn btn-primary" style = "background-color: rgb(52, 58, 64); color:white; display:inline-block">Confirm Changes</a>
					<a href="#" class="btn btn-primary" style = "background-color: rgb(52, 58, 64); color:white">Void</a>	
				</div>
			</div>

			<div class="col-md-6" style="background-color: rgba(228, 227, 227, 0.507);float:left" >
			<br><h5 class="card-title pb-2" style="text-align: center;">Order Details</h5>
			{{#each orderItems}}
				{{> orderItem}}
			{{/each}}


		<br><div class="card h-auto" style = "margin:auto; width:275px">
					<div class="card-body">
					<p id="shippingFee" name="shippingFee" class="card-text"><b>Shipping Fee:</b> {{shippingFee}}</p>
						<form name="shippingFeeForm" id="shippingFeeForm" method="POST" action="/admin/orders/updateShippingFee">
							<input type="number" id="shippingFeeInput" name="shippingFeeInput"> <button id="shipping-fee-btn" name="shipping-fee-btn" type="submit" style = "background-color: rgb(52, 58, 64); color:white">SAVE</button>
							<textarea id="shippingFeeCartId" name="shippingFeeCartId" readonly="readonly" style="display: none;">{{_id}}</textarea>
						</form>
							<br><br><p id="basePrice" name="basePrice" class="card-text"><b>Base Price:</b> {{basePrice}} </p>
							<p id="totalPrice" name="totalPrice" class="card-text"><b>Total price:</b> {{totalPrice}}</p>
					</div>
				</div>
				<div class="card-body" style="text-align: center;">
					<br><a href="/admin/inventory" target = "_blank" class="btn btn-primary" style = "background-color: rgb(52, 58, 64); color:white">Check Inventory</a>		
				</div>
			</div>
				
						
			</div>
		</div>
	</div>

</div>
</div>
