<style>
  .media-text{
    float:left;
    margin-right: 20px;
  }
  .media-text #btn{
      margin-right: -20px;
  }
  .filter_bar{
    background-color: white;
    margin:auto;
    justify-content: center;
  }
  .card{
    text-align: center;
  }
  #searchId{
    background-color: white;
    margin:auto;
    justify-content: center;
  }
</style>

<div class="jumbotron shadow p-4 text-center">
    <h4>Filter: {{resultsMessage}}</h4><hr>
    <form class="form-inline justify-content-center" id="searchInventory" name="searchInventory" mehtod="get" action="#">
        <select class="form-control custom-select col-sm-2 my-2" id="status" name="status">
          <option hidden disabled selected value>Delivery Status...</option>
          <option>Processing</option>
          <option>Shipped</option>
          <option>Delivered</option>
        </select>
        <select class="form-control custom-select col-sm-2 my-2 mx-sm-3" id="status" name="status">
          <option hidden disabled selected value>Payment Status...</option>
          <option>Unpaid</option>
          <option>Paid</option>
        </select>
        <input placeholder="Start Date" class="form-control my-2 col-sm-2" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="dateStart" name="dateStart"/>
        <input placeholder="End Date" class="form-control my-2 mx-sm-3" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" id="dateEnd" name="dateEnd"/>
        <button class="btn btn-primary my-2" id="btn" type="submit">Apply Filter</button>
    </form><hr>
    <form class="form-inline justify-content-center" mehtod="get" action="/admin/orders" id="searchId">
        <input type="text" class="form-control col-sm-2 mt-2 mx-sm-3" id="orderId" name="orderId" placeholder="Order ID">
        <button class="btn btn-primary mt-2" id="btn" type="submit">Search</button>
    </form>
</div>

<div class="row">
    {{#each orderCards}}
        {{> orderCard}}
    {{/each}}
</div>

{{> paginator}}