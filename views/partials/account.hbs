<tr>
    <td>{{username}}</td>
    {{#if isAdmin}}
    <td>(ADMIN)</td>
    {{else}}
    <td>
        <form method="POST" action="/admin/control/deleteUser">
            <textarea readonly="readonly" id="deleteUserName" name="deleteUserName" style="display: none;">{{username}}</textarea>
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
        </form>
    </td>
    {{/if}}
</tr>